<ion-view view-title="{{word.title}}">
    <ion-content class="has-footer ">
        <div id="container" class="blue">

            <ul class="tab swiper-pagination swiper-pagination-clickable">
                <li class="swiper-pagination-bullet swiper-pagination-bullet-active">당일 실적</li>
                <li class="swiper-pagination-bullet">당월 실적</li>
            </ul>

            <div id="date">
                <p class="left">2015년 6월 7일 마감기준</p>
                <p class="right">단위 : 백만원</p>
            </div>

            <div id="table" class="swiper-container">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <table>
                            <tr>
                                <th>구분</th>
                                <th>목표</th>
                                <th>실적</th>
                                <th>달성율</th>
                                <th>작년실적</th>
                                <th>성장률</th>
                            </tr>
                            <tr class="highlight" ng-repeat="item in CEOReportList">
                                <td>{{item.name}}</td>
                                <td>{{item.plaN_SALES}}</td>
                                <td>{{item.reaL_SALES}}</td>
                                <td>{{item.sW_SALE}}</td>
                                <td>{{item.sW_SALE_A}}</td>
                                <td>{{item.sW_SALE_G}}</td>
                            </tr>
                        </table>
                    </div>

                    <div class="swiper-slide">
                        <table>
                            <tr>
                                <th>구분</th>
                                <th>목표</th>
                                <th>실적</th>
                                <th>달성율</th>
                                <th>작년실적</th>
                                <th>성장률</th>
                            </tr>
                            <tr class="highlight" ng-repeat="item in CEOReportList">
                                <td>{{item.name}}</td>
                                <td>{{item.plaN_SALES}}</td>
                                <td>{{item.reaL_SALES}}</td>
                                <td>{{item.sW_SALE}}</td>
                                <td>{{item.sW_SALE_A}}</td>
                                <td>{{item.sW_SALE_G}}</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </ion-content>

</ion-view>