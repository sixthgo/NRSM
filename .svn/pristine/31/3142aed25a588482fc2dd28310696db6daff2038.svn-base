<ion-view view-title="{{word.productInfo}}">
    <ion-content class="has-footer">
        <div id="container" class="green">
            <form>
                <ul class="list">
                    <li>
                        <p class="left">지점 코드</p>
                        <p class="right">{{data.shopCode}}</p>
                    </li>
                    <li>
                        <p class="left">상품 코드</p>
                        <p class="right">{{base.barCode007}}</p>
                    </li>
                </ul>
                <p class="btn_border btn_search btn_color">
