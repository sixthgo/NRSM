@model Formular.BaaS.Domain.Role
@{
    ViewBag.Title = "User";
    Layout = "~/Areas/BaaSMng/Views/Shared/_2ColLayout.cshtml";
}

@section HeadCss
{
    @Styles.Render("~/Content/plugins/dataTables/bundle")
}
@section SideContent
{
    <div class="row-fluid">
        <div class="span12" >
            <blockquote>
              <p>User</p>
              <small>User list</small>
            </blockquote>
            <p>
            <a href="@Url.Action("Create")" class="btn btn-small" ><i class="icon-plus"></i> Create</a>
            </p>
            
            @if (Model.AppDivision != null)
            {
                @Html.Partial("../BaaSApplication/_LeftInfo", Model.AppDivision as AppDivision )
            }
        </div>
    </div>
}
@section Scripts
{
    @Scripts.Render("~/Scripts/plugins/dataTables/bundle")
    <script type="text/javascript">
        $(function () {
            
        });
    </script>
}

<div class="row-fluid">
    <div class="span12"> 
        @Html.Partial("../BaaSUser/_Table" , Model.Users , ViewData )
</div>
</div>