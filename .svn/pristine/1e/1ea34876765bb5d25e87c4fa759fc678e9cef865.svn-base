    <div class="row">
        <div class="newLayer">
            <div class="header">
                <p>POG 진열 정보</p>
            </div>
            <div class="body">
                <div class="double">
                    <p class="left">현재 선택</p>
                    <p class="right">{{param.subTitle}}</p>
                </div>
            </div>
        </div>
    </div>
