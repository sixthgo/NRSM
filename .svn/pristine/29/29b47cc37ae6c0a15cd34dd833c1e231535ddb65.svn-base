                                </th>
                                <th class="sort width13P" ng-click="sorting('pastAmount')" ng-class="{'sort down': (sort.column == 'pastAmount' && sort.isDescending), 'sort up': (sort.column == 'pastAmount' && !sort.isDescending)}">
