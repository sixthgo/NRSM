@model Formular.BaaS.Domain.AppDivision

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/BaaSMng/Views/Shared/_2ColLayout.cshtml";
}


@section SideContent
{
    <div class="row-fluid">
        <div class="span12" >
            <blockquote>
              <p>Application</p>
              <small>Application Edit</small>
            </blockquote>
        </div>
    </div>
}


<div class="row-fluid">
    <div class="span12"> 

@using (Html.BeginForm("Edit", "BaaSApplication", FormMethod.Post, new { @class = "form-horizontal" }))
{

    <fieldset>
        <legend>Application</legend>
        @Html.HiddenFor(model => model.Id)

        <div class="control-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label" , @for="Name" })
            <div class="controls">
                @Html.EditorFor(model => model.Name, "", new { placeholder = "Name" })
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.Desc, new { @class = "control-label" , @for="Desc" })
            <div class="controls">
                @Html.EditorFor(model => model.Desc, "", new { placeholder = "Desc" })
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.IsUsed, new { @class = "control-label" , @for="IsUsed" })
            <div class="controls">
                <div class="switch switch-small" data-on-label="Used" data-off-label="None">
                    @Html.EditorFor( c=> c.IsUsed)
                </div>
            </div>
        </div>

        <p>
            <input type="submit" value="Save" class="btn btn-success" />
            @Html.ActionLink("Back to List", "Index", new { }, new { @class="btn" })
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

</div></div>